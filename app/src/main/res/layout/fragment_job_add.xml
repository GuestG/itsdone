<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".JobAddFragment">

    <EditText
        android:id="@+id/add_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/enter_job_title_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_job_short_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/enter_job_short_desc_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_title" />

    <EditText
        android:id="@+id/add_job_long_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/enter_job_long_desc_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_short_desc" />

    <EditText
        android:id="@+id/add_job_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/enter_job_location_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_long_desc" />

    <EditText
        android:id="@+id/add_job_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/enter_job_price_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_location" />

    <androidx.cardview.widget.CardView

        android:id="@+id/PhotosCardView"
        android:layout_width="324dp"
        android:layout_height="360dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_price"
        app:layout_constraintVertical_bias="0.23000002">

        <Button
            android:id="@+id/photo0"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/a"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo1"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/b"
            android:layout_marginLeft="174dp"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/c"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/d"
            android:layout_marginLeft="174dp"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo4"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/e"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo5"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/f"
            android:layout_marginLeft="174dp"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo6"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/g"
            android:elevation="5dp" />

        <Button
            android:id="@+id/photo7"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/h"
            android:layout_marginLeft="174dp"
            android:elevation="5dp" />

        <Button
        android:id="@+id/photo8"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/i"
        android:elevation="5dp" />

        <Button
            android:id="@+id/photo9"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/j"
            android:layout_marginLeft="174dp"
            android:elevation="5dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addPhotoCardView"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_price"
        app:layout_constraintVertical_bias="0.23000002">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_add_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/round_button"
                android:elevation="5dp"
                android:text="Upload Photo" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addJobCardView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_job_price"
        app:layout_constraintVertical_bias="0.23000002">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_add_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/round_button"
                android:elevation="5dp"
                android:text="@string/btn_add_job" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
